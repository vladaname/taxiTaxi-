<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="taxiTaxi" transaction-type="RESOURCE_LOCAL">
		<class>com.example.demo.model.Cenovnik</class>
		<class>com.example.demo.model.Korisnik</class>
		<class>com.example.demo.model.Racun</class>
		<class>com.example.demo.model.Uloga</class>
		<class>com.example.demo.model.Voznja</class>
		<class>model2.Cenovnik</class>
		<class>model2.Korisnik</class>
		<class>model2.Racun</class>
		<class>model2.Uloga</class>
		<class>model2.Voznja</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/taxiappndb"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
